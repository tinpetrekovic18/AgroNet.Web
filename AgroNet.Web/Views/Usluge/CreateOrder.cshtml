@model AgroNet.Web.Models.NarudzbaCreateViewModel

@{
    ViewBag.Title = "Create Narudzba";
}

<h2>Create Narudzba</h2>

<form asp-action="CreateOrder" method="post">
    <input type="hidden" asp-for="UslugaId" />
    <input type="hidden" asp-for="ProdavacOPGId" />

    <div class="form-group">
        <label>Usluga</label>
        <input class="form-control" type="text" asp-for="UslugaNaziv" readonly />
    </div>

    <div class="form-group">
        <label>Prodavac OPG</label>
        <input class="form-control" type="text" asp-for="ProdavacOPGNaziv" readonly />
    </div>

    <!-- Include other form fields as necessary -->
    
    <div class="form-group">
        <label asp-for="Kolicina"></label>
        <input class="form-control" asp-for="Kolicina" />
    </div>

    <div class="form-group">
        <label asp-for="JedinicnaCijena"></label>
        <input class="form-control" asp-for="JedinicnaCijena" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
