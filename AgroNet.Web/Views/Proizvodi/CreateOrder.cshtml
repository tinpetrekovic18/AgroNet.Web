@model AgroNet.Web.Models.NarudzbaProizvodCreateViewModel

@{
    ViewBag.Title = "Create Order";
}
<div class="container">
    <div class=" mt-3">
    <h2 >Stvori narudžbu za Proizvod: @Model.ProizvodNaziv</h2>
    </div>
<div class="row justify-content-center">
    <div class="col-md-6">
<form asp-action="CreateOrder" method="post">
    <div class="form-group">
        <label asp-for="ProizvodNaziv"></label>
        <input type="text" asp-for="ProizvodNaziv" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="ProdavacOpgNaziv"></label>
        <input type="text" asp-for="ProdavacOpgNaziv" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Kolicina"></label>
        <input type="number" asp-for="Kolicina" class="form-control" />
        <span asp-validation-for="Kolicina" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="JedinicnaCijena"></label>
        <input type="number" asp-for="JedinicnaCijena" class="form-control" step="0.01" />
        <span asp-validation-for="JedinicnaCijena" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="ProizvodId" />
    <input type="hidden" asp-for="ProdavacOpgId" />
                <div class=" mt-3">
    <button type="submit" class="btn btn-primary me-3">Podnesi narudžbu</button>
    </div>
</form>
</div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
