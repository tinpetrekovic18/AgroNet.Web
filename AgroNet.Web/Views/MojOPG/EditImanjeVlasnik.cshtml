@model AgroNet.Model.ImanjeVlasnik

<div class="container">
    <!-- Breadcrumb navigation -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Edit", new { id = ViewBag.OPGId, activeTab = "imanjaVlasnika" })">
                    Vlasnikova Imanja
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Edit Imanje Vlasnika</li>
        </ol>
    </nav>
</div>

<div class="container">
    <h2>Edit Imanje Vlasnika</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="EditImanjeVlasnik" method="post">
                <div class="form-group">
                    <label asp-for="Imanje.Katastar" class="control-label">Katastar</label>
                    <input asp-for="Imanje.Katastar" class="form-control" />
                    <span asp-validation-for="Imanje.Katastar" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Imanje.Povrsina" class="control-label">Povrsina</label>
                    <input asp-for="Imanje.Povrsina" class="form-control" />
                    <span asp-validation-for="Imanje.Povrsina" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProizvodId" class="control-label">Proizvod</label>
                    <select asp-for="ProizvodId" class="form-control" asp-items="ViewBag.Proizvodi"></select>
                    <span asp-validation-for="ProizvodId" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="VlasnikId" class="control-label">Vlasnik</label>
                    <input asp-for="VlasnikId" class="form-control" />
                    <span asp-validation-for="VlasnikId" class="text-danger"></span>
                </div>

                <div class="form-group mt-3 text-center">
                    <input type="hidden" name="opgId" value="@ViewBag.OPGId" />
                    <input type="hidden" name="vlasnikId" value="@ViewBag.vlasnikId" />
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a href="@Url.Action("Edit", new { id = ViewBag.OPGId, activeTab = "imanjaVlasnika" })" class="btn btn-secondary ml-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
