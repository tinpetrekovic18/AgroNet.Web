@model AgroNet.Model.Proizvod
@{
    var opgId = ViewBag.OPGId;
    var vrstaProizvodaList = ViewBag.VrstaProizvodaList as IEnumerable<SelectListItem>;
}
<div class="container">
    <!-- Breadcrumb navigation -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("CreateOrEdit", "MojOPG")">Moj OPG</a></li>
            <li class="breadcrumb-item active" aria-current="page">Create Proizvod</li>
        </ol>
    </nav>

<div class="container">
    <h2>Create Proizvod</h2>
    <form asp-action="CreateProizvod" method="post">
        <div class="form-group">
            <label asp-for="Naziv" class="control-label"></label>
            <input asp-for="Naziv" class="form-control" />
            <span asp-validation-for="Naziv" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Opis" class="control-label"></label>
            <input asp-for="Opis" class="form-control" />
            <span asp-validation-for="Opis" class="text-danger"></span>
        </div>

            <div class="form-group">
                <label asp-for="VrstaProizvodaId" class="control-label"></label>
                <select asp-for="VrstaProizvodaId" class="form-control" asp-items="ViewBag.VrstaProizvodaList"></select>
                <span asp-validation-for="VrstaProizvodaId" class="text-danger"></span>
            </div>



        <input type="hidden" name="OPGId" value="@opgId" />
        <input type="submit" value="Create Proizvod" class="btn btn-primary" />
        <a href="@Url.Action("Edit", new { id = opgId })" class="btn btn-secondary ml-2">Cancel</a>
    </form>
</div>
