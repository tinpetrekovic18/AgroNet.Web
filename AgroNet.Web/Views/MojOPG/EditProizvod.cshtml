@model AgroNet.Model.Proizvod
@{
    var opgId = ViewBag.OPGId;
    var vrstaProizvodaList = ViewBag.VrstaProizvodaList as IEnumerable<SelectListItem>;
}
<div class="container">
    <!-- Breadcrumb navigation -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Edit", new { id = opgId, activeTab = "proizvodi" })">
                    Moji proizvodi
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Create Proizvod</li>
        </ol>
    </nav>
</div>


<div class="container">
    <h2 class="text-center">Uredi Proizvod</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Adjust the column size as needed -->
    <form asp-action="EditProizvod" method="post">
        <div class="form-group">
            <label asp-for="Naziv" class="control-label"></label>
            <input asp-for="Naziv" class="form-control" />
            <span asp-validation-for="Naziv" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Opis" class="control-label"></label>
            <input asp-for="Opis" class="form-control" />
            <span asp-validation-for="Opis" class="text-danger"></span>
        </div>

        <div class="form-group">
                    <label asp-for="VrstaProizvodaId" class="control-label">Vrsta proizvoda</label>
            <select asp-for="VrstaProizvodaId" class="form-control" asp-items="vrstaProizvodaList"></select>
            <span asp-validation-for="VrstaProizvodaId" class="text-danger"></span>
        </div>
        <div class="form-group mt-3 text-center">
        <input type="hidden" name="opgId" value="@opgId" />
        <button type="submit" class="btn btn-primary">Spremi</button>
                    <a asp-action="Edit" asp-route-id="@opgId" class="btn btn-secondary">Odustani</a>
        </div>
    </form>
</div>
    </div>
</div>

