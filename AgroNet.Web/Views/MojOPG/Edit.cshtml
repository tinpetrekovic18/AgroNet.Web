@model AgroNet.Model.OPG
@{
    var isEditMode = ViewBag.IsEditMode;
    var opgId = Model.Id;
}

<!-- Bootstrap CSS for tabs -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />

<!-- Edit Page Content -->
<div class="container">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" href="#details" data-toggle="tab">Details</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#proizvodi" data-toggle="tab">Proizvodi</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#strojeviAlati" data-toggle="tab">Strojevi i Alati</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#usluge" data-toggle="tab">Usluge</a>
        </li>
    </ul>

    <div class="tab-content mt-3">
        <div class="tab-pane active" id="details">
            <form asp-action="@(ViewBag.IsEditMode ? "Edit" : "Create")" method="post">
                <div class="form-group">
                    <label asp-for="Naziv" class="control-label"></label>
                    <input asp-for="Naziv" class="form-control" />
                    <span asp-validation-for="Naziv" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Adresa" class="control-label"></label>
                    <input asp-for="Adresa" class="form-control" />
                    <span asp-validation-for="Adresa" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IBAN" class="control-label"></label>
                    <input asp-for="IBAN" class="form-control" />
                    <span asp-validation-for="IBAN" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MjestoId" class="control-label"></label>
                    <select asp-for="MjestoId" class="form-control" asp-items="ViewBag.Mjesta"></select>
                    <span asp-validation-for="MjestoId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="DjelatnostId">Djelatnost</label>
                    <select id="DjelatnostId" name="DjelatnostId" class="form-control" asp-items="ViewBag.Djelatnosti"></select>
          
                </div>

                <div class="form-group mt-4">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="@(ViewBag.IsEditMode ? "Save Changes" : "Create OPG")" class="btn btn-primary" />
                    <a asp-action="CreateOrEdit" class="btn btn-secondary ml-2">Cancel</a>
                </div>
            </form>
        </div>

        <div class="tab-pane" id="proizvodi">
            <a href="@Url.Action("CreateProizvod", new { opgId = opgId })" class="btn btn-primary mb-3">Create New Proizvod</a>
            <table class="table">
                <thead>
                    <tr>
                        <th>Naziv</th>
                        <th>Opis</th>
                        <th>Vrsta proizvoda</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.Proizvodi)
                    {
                        <tr>
                            <td>@item.Naziv</td>
                            <td>@item.Opis</td>
                            <td>@item.VrstaProizvodaNaziv</td> <!-- Display VrstaProizvoda.Naziv -->
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="tab-pane" id="strojeviAlati">
            <a href="@Url.Action("CreateStrojAlat", new { opgId = opgId })" class="btn btn-primary mb-3">Create New Stroj/Alat</a>
            <table class="table">
                <thead>
                    <tr>
                        <th>Naziv</th>
                        <th>Opis</th>
                        <th>Vrsta stroja/alata</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.StrojeviAlati)
                    {
                        <tr>
                            <td>@item.Naziv</td>
                            <td>@item.Opis</td>
                            <td>@item.VrstaStrojaAlataNaziv</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="tab-pane" id="usluge">
            <a href="@Url.Action("CreateUsluga", new { opgId = opgId })" class="btn btn-primary mb-3">Create New Usluga</a>
            <table class="table">
                <thead>
                    <tr>
                        <th>Naziv</th>
                        <th>Opis</th>
                        <th>Vrsta usluge</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.Usluge)
                    {
                        <tr>
                            <td>@item.Naziv</td>
                            <td>@item.Opis</td>
                            <td>@item.VrstaUslugeNaziv</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

<!-- Bootstrap JS and dependencies -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
